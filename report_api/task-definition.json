{
  "family": "monitor-report-api-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "256",
  "memory": "512",
  "executionRoleArn": "arn:aws:iam::908027373537:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::908027373537:role/monitor-report-api-task-role",
  "containerDefinitions": [
    {
      "name": "monitor-report-api",
      "image": "908027373537.dkr.ecr.us-east-2.amazonaws.com/foxx_monitor_report_api:latest",
      "portMappings": [
        {
          "containerPort": 8000,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "environment": [
        {"name": "AWS_DEFAULT_REGION", "value": "us-east-2"},
        {"name": "AWS_REGION", "value": "us-east-2"},
        {"name": "S3_REPORTS_BUCKET", "value": "monitor-reports-archive"},
        {"name": "PORT", "value": "8000"},
        {"name": "HOST", "value": "0.0.0.0"}
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/monitor-report-api",
          "awslogs-region": "us-east-2",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": ["CMD-SHELL", "curl -f http://localhost:8000/api/reports/health || exit 1"],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
